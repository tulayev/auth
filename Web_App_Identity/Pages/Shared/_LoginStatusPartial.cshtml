@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-page="/account/logout">
        Welcome @User.Identity.Name (@User.Claims.First(c => c.Type == "Position"))
        <button type="submit" class="m-lg-2 btn btn-link">Log Out</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/account/login">Log In</a>
}